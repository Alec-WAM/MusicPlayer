<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="alec_wam.musicplayer.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_albums"
        android:name="alec_wam.musicplayer.ui.albums.AlbumsFragment"
        android:label="@string/menu_albums"
        tools:layout="@layout/fragment_albums" >
        <action
            android:id="@+id/action_navigation_albums_to_navigation_album"
            app:destination="@id/navigation_album" />
    </fragment>

    <fragment
        android:id="@+id/navigation_album"
        android:name="alec_wam.musicplayer.ui.album.AlbumFragment"
        android:label="@string/sub_menu_album"
        tools:layout="@layout/fragment_album" />

    <fragment
        android:id="@+id/navigation_playlists"
        android:name="alec_wam.musicplayer.ui.playlists.PlaylistsFragment"
        android:label="@string/menu_playlists"
        tools:layout="@layout/fragment_playlists" />
</navigation>